{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "punklorde:schema:motion_profile",
    "map": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "path": {
                    "type": "string",
                    "pattern": "^[^\\s]+$"
                },
                "name": {
                    "type": "string"
                }
            },
            "required": ["id", "path", "name"]
        }
    },
    "required": ["map"]
}